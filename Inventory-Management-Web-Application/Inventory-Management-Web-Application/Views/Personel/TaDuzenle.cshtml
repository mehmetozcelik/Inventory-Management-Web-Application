
@{
    ViewBag.Title = "TaDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using Inventory_Management_Web_Application.Models
@model TeslimAlanPersonel

@section head{

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
}

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            <div class="col-lg-12">
                <b>Teslim Alan Personel Düzenle</b>
            </div>
        </header>
        <div class="panel-body">
            <form action="TaDuzenle" method="post">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-12">
                            @Html.Hidden("ID", Model.ID)
                            <div class="form-group">
                                <label>Adı</label>&nbsp;<span style="color: red;">*</span>
                                <input value="@Model.Adi" name="Adi" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Soyadı</label>&nbsp;<span style="color: red;">*</span>
                                <input value="@Model.Soyadi" name="Soyadi" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Birimi</label>&nbsp;<span style="color: red;">*</span>
                                @Html.DropDownList("TeslimBirimID", (SelectList)ViewBag.Birimler, new { @class = "selectpicker form-control", size = 5, @data_live_search = "true", required = "true"})
                            </div>
                            <div class="form-group">
                                <label>Telefon</label>&nbsp;<span style="color: red;">*</span>
                                <input value="@Model.Tel" name="Tel" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>E-Posta</label>&nbsp;<span style="color: red;">*</span>
                                <input value="@Model.Email" name="Email" class="form-control" required>
                            </div>

                            <button type="submit" id="button" class="btn btn-info">Kaydet</button>
                            <a href="/Personel/TaListesi" class="btn btn-danger">İptal</a>
                            <button type="reset" class="btn btn-default">Temizle</button>
                        </div>
                    </div>
                </div>


            </form>
        </div>
    </section>
</div>

@section script{

}


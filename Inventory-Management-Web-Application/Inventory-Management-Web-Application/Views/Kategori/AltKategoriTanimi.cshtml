
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
}

<div class="row">

    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="col-lg-12">
                    <b> Yeni Alt Kategori Ekle</b>
                </div>
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Kategori/AltKategoriTanimi">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Ana Kategori Seçiniz </label>&nbsp;<span style="color: red;">*</span>
                                    @Html.DropDownList("AnaKategorID", (SelectList)ViewBag.kategoriler, new { @class = "selectpicker form-control", size = 5, @data_live_search = "true", required = "true"})
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Kategori Adı </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="text" class="form-control" placeholder="Kategori Adı Giriniz..." name="KategoriAdi" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Kategori Açıklama </label>
                                    <input type="text" class="form-control" placeholder="Kategori Açıklama Giriniz..." name="Aciklama" >
                                </div>
                                <button type="submit" id="button" class="btn btn-info">Kaydet</button>
                                <a href="/Kategori/AnaKategoriListesi" class="btn btn-danger">İptal</a>
                                <button type="reset" class="btn btn-default">Temizle</button>
                            </div>

                        </div>
                    </div>

                </form>
            </div>
        </section>
    </div>
</div>



@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Inventory_Management_Web_Application.Models
@model Personel

@section head{

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
}

<div class="row">

    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="col-lg-12">
                    Şu anda <b> @Model.Adi @Model.Soyadi</b> Kullanıcısını düzenliyorsunuz...
                </div>
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Kullanici/Guncelle">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-12">
                                @Html.Hidden("ID", Model.ID)
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Kullanıcı Profili Seçiniz </label>&nbsp;<span style="color: red;">*</span>
                                    @Html.DropDownList("rolID", (SelectList)ViewBag.Roller, new { @class = "selectpicker form-control", size = 5, @data_live_search = "true", required = "true"})
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Personel Adı </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="text" class="form-control" placeholder="Personel Adı Giriniz..." name="Adi" required value="@Model.Adi">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Personel Soyadı </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="text" class="form-control" placeholder="Personel Soyadı Giriniz..." name="Soyadi" required value="@Model.Soyadi">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Personel E-mail </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="text" class="form-control" placeholder="Personel E-mail Giriniz..." name="Email" required value="@Model.Email">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Personel Şifre </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="password" class="form-control" placeholder="Personel Şifre Giriniz..." name="Sifre" required value="@Model.Sifre">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Telefon </label>
                                    <input type="text" class="form-control" placeholder="Personel Telefon Giriniz..." name="Tel" value="@Model.Tel">
                                </div>
                                <button type="submit" id="button" class="btn btn-info">Kaydet</button>
                                <a href="/Kullanici/Listesi" class="btn btn-danger">İptal</a>
                                <button type="reset" class="btn btn-default">Temizle</button>
                            </div>

                        </div>
                    </div>

                </form>
            </div>
        </section>
    </div>
</div>


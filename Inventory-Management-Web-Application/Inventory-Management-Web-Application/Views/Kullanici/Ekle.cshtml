
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="col-lg-12">
                    <b> Yeni Kullanıcı Ekle</b>
                </div>
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Kullanici/Ekle">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Kullanıcı Profili Seçiniz </label>&nbsp;<span style="color: red;">*</span>
                                    @Html.DropDownList("rolID", (SelectList)ViewBag.Roller, "Seçiniz...", new { @class = "form-control", required = "required" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Personel Adı </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="text" class="form-control" placeholder="Personel Adı Giriniz..." name="Adi" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Personel Soyadı </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="text" class="form-control" placeholder="Personel Soyadı Giriniz..." name="Soyadi" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Personel E-mail </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="text" class="form-control" placeholder="Personel E-mail Giriniz..." name="Email" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Personel Şifre </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="password" class="form-control" placeholder="Personel Şifre Giriniz..." name="Sifre" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Telefon </label>
                                    <input type="text" class="form-control" placeholder="Personel Telefon Giriniz..." name="Tel">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Stok Bulten  </label> &nbsp;<span style="color: red;">*</span>
                                    <br />
                                    <input name="StokBulten" value="true"  type="checkbox" checked=""> Bu kişiye mail ile stok Bildiriminde bulunulsun mu?
                                </div>
                                <button type="submit" id="button" class="btn btn-info">Kaydet</button>
                                <a href="../Personel/TaListele" class="btn btn-danger">İptal</a>
                                <button type="reset" class="btn btn-default">Temizle</button>
                            </div>

                        </div>
                    </div>

                </form>
            </div>
        </section>
    </div>
</div>


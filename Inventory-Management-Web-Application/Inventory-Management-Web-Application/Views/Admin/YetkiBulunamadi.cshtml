    @using Inventory_Management_Web_Application.Models
    @{ 
        Personel p = (Personel)Session["Kullanici"];
    }
</head>

<body class="lock-screen" onload="startTime()">

    <div class="lock-wrapper">

        <div id="time"></div>


        <div class="lock-box text-center">
            <img src="/Content/img/blank-profile-picture-973460_960_720.png" alt="lock avatar" style="width:75px;" />
            <h1>@p.Adi @p.Soyadi</h1>
            <span class="locked">Bu İşlemi gerçekleştirebilmeniz İçin Yetkiniz Bulunmamaktadır.</span>
            <form role="form" class="form-inline" action="index.html">
                <div class="form-group col-lg-12">
                    <a class="btn btn-lock" href="/Admin/Index">
                        <i class="icon-home"> Ana Sayfa</i>
                    </a>
                </div>
            </form>
        </div>
    </div>
    <script>
        function startTime()
        {
            var today=new Date();
            var h=today.getHours();
            var m=today.getMinutes();
            var s=today.getSeconds();
            // add a zero in front of numbers<10
            m=checkTime(m);
            s=checkTime(s);
            document.getElementById('time').innerHTML=h+":"+m+":"+s;
            t=setTimeout(function(){startTime()},500);
        }

        function checkTime(i)
        {
            if (i<10)
            {
                i="0" + i;
            }
            return i;
        }
    </script>
</body>
</html>

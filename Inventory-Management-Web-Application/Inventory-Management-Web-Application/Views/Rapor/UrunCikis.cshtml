@section head{

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ürün Çıkış Raporu<br />
                <span style="color:red;font-size:11px;">*  Aşağıdaki alanlar 've' koşulu ile çalışır.</span>
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Rapor/UrunCikis" target="_blank">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ürün Seçiniz Seçiniz </label>&nbsp;<span style="color: red;">*</span>
                        @Html.DropDownList("UrunID", (SelectList)ViewBag.urunler, new { @class = "selectpicker form-control", size = 5, @data_live_search = "true" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Çıkış Tarihi (Seçilen tarihten sonra çıkan ürünleri getirir.) </label>
                        <input type="date" class="form-control" placeholder="Teslim Tarihi..." name="TeslimTarihi">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ürünü Çıkartan Kişiyi Seçiniz </label>&nbsp;<span style="color: red;">*</span>
                        @Html.DropDownList("TeslimVerenID", (SelectList)ViewBag.personeller, "Seçiniz...", new { @class = "form-control" })
                    </div>
                    <button style="float:right;" type="submit" class="btn btn-info">Rapor Çıkar</button>
                </form>

            </div>
        </section>
    </div>
</div>


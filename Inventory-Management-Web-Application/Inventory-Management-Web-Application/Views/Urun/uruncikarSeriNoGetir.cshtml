
@using Inventory_Management_Web_Application.Models

@model List<UrunStok>

@{
    if (Model.Where(x => x.UrunTekilStok != null).ToList().Count > 0)
    {
        <label for="exampleInputEmail1">Çıkartılacak Stok Miktarı Giriniz </label> <span style="color: red;">*</span>
        <input type="number" class="form-control" placeholder="Miktar Giriniz..." name="StokMiktari">
        <input type="number" class="form-control hidden" placeholder="Miktar Giriniz..." value="@Model.Where(x => x.UrunTekilStok != null).SingleOrDefault().ID" name="urunStokID">
    }
    else
    {
        <label for="exampleInputEmail1">Ürün Seri No Seçiniz </label> <span style="color: red;">*</span>
        @Html.DropDownList("urunStokID", (SelectList)ViewBag.urunGirisler, "Seçiniz...", new { @class = "form-control", required = "required" })
    }
}





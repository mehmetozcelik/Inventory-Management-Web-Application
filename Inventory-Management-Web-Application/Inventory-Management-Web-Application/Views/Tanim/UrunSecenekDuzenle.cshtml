
@{
    ViewBag.Title = "UrunTipiDuzenle";
}


@using Inventory_Management_Web_Application.Models

@model  UrunSecenek


@section head{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Şuan da @Model.Adi isimli Ürün Seçeneğini düzenliyorsunuz...
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Tanim/UrunSecenekDuzenle">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Adı </label>
                        <input type="text" class="form-control" value="@Model.Adi" name="Adi">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Açıklama </label>
                        <input type="text" class="form-control" value="@Model.Aciklama" name="Aciklama">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ürün Tipi Seçiniz </label>&nbsp;<span style="color: red;">*</span>
                        @Html.DropDownList("UrunTipID", (SelectList)ViewBag.urunTipi, new { @class = "selectpicker form-control", size = 5, @data_live_search = "true", required = "true" })
                    </div>
                    @Html.Hidden("ID", Model.ID)
                    <button type="submit" class="btn btn-info">Kaydet</button>
                    <a href="/Tanim/UrunSecenekTanimi" class="btn btn-danger">İptal</a>
                    <button type="reset" class="btn btn-default">Temizle</button>
                </form>

            </div>
        </section>
    </div>
</div>


